{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,
    "strict": true,
		"baseUrl": "./src",
		"esModuleInterop": true,
    "paths": {
			"@modules/*": ["modules/*"],
			"@config/*": ["config/*"],
			"@shared/*": ["shared/*"]
		}
  }
}
